//- Все примеси в этом файле должны начинаться c имени блока (social)

mixin social()
  - const tabs = [{value: "twitter", text: "Twitter", isChecked: true}, {value: "youtube", text: "Youtube"}];
  - const twitterPlug = [null, null, null, null];
  - const youtubePlug = [null];

  .social.gl-block#social-host
    h2.gl-title Social

    .social__content
      .social__tabs-wrapper
        each tab in tabs
          label.social__tab-wrapper
            input(type="radio", name="social-tab", value=tab.value, checked=tab.isChecked).social__tab.js-tab
            .social__tab-content= tab.text

      ul(data-value="twitter").social__posts-list.js-content
        each post in twitterPlug
          li.social__post-item
            // вместо img вставить пост с twitter
            img(src="img/data-jpegs/twitter-plug.jpg").social__post-plug

      ul(data-value="youtube").social__posts-list.js-content
        each post in youtubePlug
          li.social__post-item
            // вместо img вставить пост с youtube
            img(src="img/data-jpegs/twitter-plug.jpg").social__post-plug
