mixin header()
  - const navLinkList = [{text: "guild", link: "#"}, {text: "games", link: "#", isActive: true}, {text: "nft", link: "#"}, {text: "airdrop", link: "#"}];

  header.header
    .gl-page-content
      .header__content-wrapper
        .header__left-block
          a(href="/").header__logo-link
            img(src="img/logo-header.png").header__logo

          .header__nav-links-wrapper
            each navLink in navLinkList
              a(href=navLink.link, class= navLink.isActive && "header__nav-link--active").header__nav-link= navLink.text

        .header__right-block
          .header__btns-wrapper
            div select
            button(type="button").header__btn Log in
            button(type="button").header__btn Sign up

          button(type="button").header__btn.header__btn--blue connect wallet

